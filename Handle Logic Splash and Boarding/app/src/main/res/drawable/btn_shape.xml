<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#372849"/>
            <stroke android:width="2dp"
                android:color="@color/colorGray"/>
            <padding
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#372849"
                android:endColor="#372849"
                android:angle="270"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:left="7dp"
                android:right="7dp"
                android:top="7dp"
                android:bottom="7dp"/>
        </shape>
    </item>

</selector>