<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.gastro.gastropodex.Activity.LoginActivity">

    <LinearLayout
        android:background="#FE5C2B"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        tools:ignore="UselessParent">
    </LinearLayout>

    <ImageView
        android:background="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_width="210dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription" />

   <EditText
       android:hint="Email"
       android:paddingLeft="15dp"
       android:layout_marginTop="225dp"
       android:layout_marginRight="35dp"
       android:layout_marginLeft="35dp"
       android:background="@drawable/btn_shape"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <EditText
        android:hint="Password"
        android:paddingLeft="15dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/btn_shape"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <Button
        android:text="@string/txt_login"
        android:textColor="@color/colorSilver"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="355dp"
        android:background="@drawable/btn_shape"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnReg"
        android:text="@string/txt_reg"
        android:textColor="@color/colorSilver"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btn_shape"
        android:textAlignment="center"/>

    <Button
        android:text="@string/txt_journey"
        android:textColor="#FE5C2B"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="485dp"
        android:background="@drawable/btn_shape"
        android:textAlignment="center"/>

    <TextView
        android:text="@string/txt_forgot"
        android:textColor="#372849"
        android:textSize="15sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>
